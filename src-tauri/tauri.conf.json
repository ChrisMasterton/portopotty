{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Port-o-Potty",
    "version": "0.1.0"
  },
  "tauri": {
    "windows": [
      {
        "title": "Port-o-Potty",
        "width": 1100,
        "height": 740,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": ["app"],
      "identifier": "com.portopotty.app",
      "icon": [
        "icons/16x16.png",
        "icons/32x32.png",
        "icons/32x32@2x.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/256x256.png",
        "icons/256x256@2x.png",
        "icons/512x512.png",
        "icons/512x512@2x.png",
        "icons/icon.png",
        "icons/icon@2x.png"
      ]
    }
  }
}
